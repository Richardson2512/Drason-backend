# Drason Backend Environment Configuration
# Copy this file to .env and update values

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
# For local development with Docker:
# docker run -d --name drason-pg -e POSTGRES_PASSWORD=postgres -e POSTGRES_DB=drason -p 5432:5432 postgres:15
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/drason?schema=public"

# For SQLite (development fallback - not recommended for production):
# DATABASE_URL="file:./dev.db"

# =============================================================================
# SERVER
# =============================================================================
PORT=3001
NODE_ENV=development

# =============================================================================
# AUTHENTICATION (Future)
# =============================================================================
# JWT_SECRET=your-secure-jwt-secret-here
# JWT_EXPIRES_IN=7d

# =============================================================================
# DEFAULT ORGANIZATION (For development/single-tenant mode)
# =============================================================================
# When set, API requests without org context will use this organization
DEFAULT_ORG_ID=default-org

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Smartlead API (configured per-organization in database)
# These are fallbacks for backwards compatibility:
# SMARTLEAD_API_KEY=your-smartlead-api-key

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
LOG_LEVEL=debug
# ENABLE_REQUEST_LOGGING=true
